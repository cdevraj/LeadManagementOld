<p> Your Manager is <cite><b><%= current_user &&  current_user.manager.name %></b></cite> </p>
<div class="widget stacked widget-table action-table">

	<div class="widget-header">
		<i class="icon-th-list"></i>
		<h3>Listing Leads</h3>
	</div> <!-- /widget-header -->

	<div class="widget-content">

		<table class="table table-striped table-bordered">
			<thead>
				<tr>
					<th>first_name</th>
					<th>last_name</th>
					<th>email</th>
					<th>email2</th>
					<th>phone_number</th>
					<th>phone_number2</th>
					<th>category</th>
					<th>company_url</th>
					<th>about_me</th>
					<th>status</th>
					<th>comment</th>
				</tr>
			</thead>
			<tbody>
			<% @leads.each do |lead| %>f
				<tr>
					<td> <%= lead.first_name %></td>
					<td> <%= lead.last_name %></td>
					<td> <%= lead.email %></td>
					<td> <%= lead.email2 %></td>
					<td> <%= lead.phone_number %></td>
					<td> <%= lead.phone_number2 %></td>
					<td> <%= lead.category %></td>
					<td> <%= lead.company_url %></td>
					<td> <%= lead.about_me %></td>
					<td> <%= lead.status %></td>
					<td> <%= lead.comment %></td>
				</tr>
				<% end %>	
			</tbody>
		</table>
	</div>
</div>
<br/>
